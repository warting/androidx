<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/host_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HostFragment">

    <!-- Thumbnails RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pdf_thumbnail_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="0dp"
        android:background="?attr/colorSurfaceContainer"
        android:elevation="4dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- PDF Container Frame -->
    <FrameLayout
        android:id="@+id/pdf_container_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/pdf_thumbnail_recycler_view" />

    <!-- Toggle Thumbnails Button -->
    <ImageButton
        android:id="@+id/pdf_thumbnail_toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_menu_sort_by_size"
        android:contentDescription="@string/toggle_thumbnails_view"
        android:background="?attr/colorSurface"
        app:backgroundTint="?attr/colorSecondaryContainer"
        android:padding="8dp"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_above_editFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="88dp" />

    <!-- Search FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/host_Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/viewer_edit_fab_margin_right"
        android:contentDescription="@string/action_search"
        android:visibility="gone"
        android:src="@drawable/ic_action_search"
        app:backgroundTint="?attr/colorSecondaryContainer"
        app:tint="?attr/colorOnSecondaryContainer"
        app:layout_constraintBottom_toTopOf="@id/guideline_above_editFab"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
