<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="6"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="190px"
                android:layout_height="500px"
                android:id="@+id/occluding_view"
                android:text="@string/long_text"
                android:elevation="10dp"
                app:layout_constraintBottom_toBottomOf="@id/ad_layout"
                app:layout_constraintEnd_toEndOf="@id/ad_layout"
                app:layout_constraintStart_toStartOf="@id/ad_layout"
                app:layout_constraintTop_toTopOf="@id/ad_layout"
                />
            <androidx.privacysandbox.ui.client.view.SandboxedSdkView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:id="@+id/ad_layout"
                tools:ignore="MissingConstraints" />
            <TextView
                android:layout_width="120px"
                android:layout_height="500px"
                android:id="@+id/occluding_view_2"
                android:text="@string/long_text"
                app:layout_constraintBottom_toBottomOf="@id/occluding_view"
                app:layout_constraintEnd_toEndOf="@id/occluding_view"
                app:layout_constraintStart_toStartOf="@id/occluding_view"
                app:layout_constraintTop_toTopOf="@id/occluding_view"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <Button
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/alpha_button"
            android:text="Change Alpha"
            />
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
