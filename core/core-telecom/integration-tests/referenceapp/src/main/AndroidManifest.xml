<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- MANAGE_OWN_CALLS is needed to use Telecom platform APIs for VoIP calling -->
    <uses-permission android:name="android.permission.MANAGE_OWN_CALLS" />
    <!-- RECORD_AUDIO is needed in order to record the callers mic input and repeat it back to
         the audio output to verify audio is not being suppressed from some misuse of APIs -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <!-- BLUETOOTH_CONNECT is needed in order to expose the BT device name -->
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <!-- required permissions in order to post call-style notifications -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />
    <!-- need this permission to run any foreground service on Android 9 (API 28) and above -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_PHONE_CALL" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CONNECTED_DEVICE"/>
    <!-- The queries tag is required for the Call Icon Extension.  The queries block allows the
      remote InCallServices to be visible to this VoIP app so this app can grant Uri permissions
      to them -->
    <queries>
        <intent>
            <action android:name="android.telecom.InCallService" />
        </intent>
    </queries>
    <application
        android:name="androidx.core.telecom.reference.VoipApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        tools:targetApi="34">
        <receiver
            android:name="androidx.core.telecom.reference.IncomingCallReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="androidx.core.telecom.reference.NEW_INCOMING_CALL" />
            </intent-filter>
        </receiver>

        <service
            android:name="androidx.core.telecom.reference.service.TelecomVoipService"
            android:enabled="true"
            android:exported="true"
            android:foregroundServiceType="microphone|phoneCall|connectedDevice" >
        </service>

        <activity
            android:name="androidx.core.telecom.reference.view.DialerActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:label="@string/main_activity_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- The queries tag is useful for the Call Icon Extension.  It allows the VoIP app to
             store a bitmap to memory and creates a URI that can be shared to another app -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="androidx.core.telecom.reference.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>
</manifest>