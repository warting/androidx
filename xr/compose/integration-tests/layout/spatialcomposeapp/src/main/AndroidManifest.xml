<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

  <uses-permission android:name="android.permission.HEAD_TRACKING" />
  <uses-permission android:name="android.permission.SCENE_UNDERSTANDING_COARSE" />

  <application
      android:label="Spatial Compose App">
    <property
        android:name="android.window.PROPERTY_XR_ACTIVITY_START_MODE"
        android:value="XR_ACTIVITY_START_MODE_FULL_SPACE_MANAGED" />
    <activity
        android:name=".SpatialComposeAppActivity"
        android:configChanges="screenSize|smallestScreenSize|orientation|screenLayout"
        android:enableOnBackInvokedCallback="true"
        android:exported="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
        android:name="androidx.xr.compose.integration.common.AnotherActivity"
        android:enableOnBackInvokedCallback="true"
        android:exported="true">
    </activity>
    <activity
        android:name=".VideoPlayerActivity"
        android:enableOnBackInvokedCallback="true"
        android:exported="true">
    </activity>
    <activity
        android:name=".WindowManagerJxrTestActivity"
        android:configChanges="screenSize|smallestScreenSize|orientation|screenLayout"
        android:enableOnBackInvokedCallback="true"
        android:exported="true">
    </activity>
    <activity
        android:name=".StateTestAppActivity"
        android:configChanges="screenSize|smallestScreenSize|orientation|screenLayout"
        android:enableOnBackInvokedCallback="true"
        android:exported="true">
      <intent-filter>
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
  </application>

</manifest>
