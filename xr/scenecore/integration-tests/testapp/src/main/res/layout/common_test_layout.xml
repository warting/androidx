<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="0dp"
    android:paddingVertical="0dp">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/top_app_bar_activity_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4285F4"
        android:minHeight="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/arrow_back"
        app:title="@string/common_test_panel_name"
        app:titleCentered="true"
        app:titleTextColor="@color/white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical" >
    <Button
        android:id="@+id/buttonRecreateActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/test_button"
        android:textFontWeight="400"
        android:textSize="20.sp"
        android:text="@string/recreate_activity" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/applicationLabel"
            android:layout_width="150sp"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:text="@string/app_name"
            app:autoSizeTextType="uniform" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textApplicationName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:autoSizeTextType="uniform"
            tools:text="SampleAppName" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/buildFingerprintLabel"
            android:layout_width="150sp"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:text="@string/build_fingerprint_label"
            app:autoSizeTextType="uniform" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textBuildFingerprint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:autoSizeTextType="uniform"
            tools:text="samsung/xrdk2/xrdk2:14/UMS1.240503.004/11806054:userdebug/test-keys" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/buildDateLabel"
            android:layout_width="150sp"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:text="@string/build_date_label"
            app:autoSizeTextType="uniform" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textBuildDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:autoSizeTextType="uniform"
            tools:text="01 May 2024, 01:02:03" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/clNumberLabel"
            android:layout_width="150sp"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:text="@string/cl_number_label"
            app:autoSizeTextType="uniform" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textClNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:autoSizeTextType="uniform"
            tools:text="123456789" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>