<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:nextFocusDown="@id/spawn_activity_panel_button"
    android:orientation="vertical"
    android:paddingHorizontal="0dp"
    android:paddingVertical="0dp">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/top_app_bar_activity_panel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/google_blue"
        android:minHeight="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/arrow_back"
        app:title="@string/common_test_panel_name"
        app:titleCentered="true"
        app:titleTextColor="@color/white"
        tools:layout_editor_absoluteX="10dp">

    </com.google.android.material.appbar.MaterialToolbar>

    <Button
        android:id="@+id/spawn_activity_panel_button"
        android:layout_width="425dp"
        android:layout_height="wrap_content"
        android:textFontWeight="400"
        android:paddingTop="10dp"
        android:text="@string/activity_panel_name"
        android:textSize="24sp"
        android:background="@drawable/test_button"
        android:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_app_bar_activity_panel"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bottomCenterFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:scaleX="1.25"
        android:scaleY="1.25"
        android:backgroundTint="@color/google_blue"
        android:src="@drawable/recreate"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>