<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SpatialAudioTestActivity">
  <Button
      android:id="@+id/playaudio"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/play_soundpool_point_label" />
  <Button
      android:id="@+id/play_soundpool_soundfield"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/play_soundpool_soundfield_label" />

  <Button
      android:id="@+id/play_audiotrack_default"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/play_audiotrack_default_label" />

  <Button
      android:id="@+id/audiotrack_default_set_params"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/audiotrack_default_set_params_label" />

  <Button
      android:id="@+id/play_audiotrack_point"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/play_audiotrack_point_label" />

  <Button
      android:id="@+id/audiotrack_set_params"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/audiotrack_set_params_label" />

  <Button
      android:id="@+id/play_audiotrack_soundfield"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/play_audiotrack_soundfield_label" />

  <Button
      android:id="@+id/audiotrack_set_params_error"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/audiotrack_set_params_error_label" />

  <Button
      android:id="@+id/play_mediaplayer_point"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/play_mediaplayer_point_label" />

  <Button
      android:id="@+id/play_mediaplayer_soundfield"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/play_mediaplayer_soundfield_label" />

  <Button
      android:id="@+id/play_mediaplayer_soundfield_opus"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/play_mediaplayer_soundfield_opus_label" />
</LinearLayout>
